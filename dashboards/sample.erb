<% content_for :title do %>My super sweet dashboard<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="3" data-sizey="1">
      <div data-id="welcome" data-view="Text" data-title="Welcome" data-text="Making it with code, baby!" data-moreinfo="Protip: Always read instructions carefully!"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="synergy" data-view="Meter" data-title="Synergy" data-min="0" data-max="10"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
          <div data-id="twitter_mentions" data-view="Comments" style="background-color:#ff9618;" data-moreinfo="Tweets tagged with ???"></div>
          <i class="icon-twitter icon-background"></i>
           </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="buzzwords" data-view="List" data-unordered="false" data-title="Buzzwords" data-moreinfo="# of times said around the office"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="valuation" data-view="Number" data-title="Current Valuation" data-moreinfo="In billions" data-prefix="$"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="convergence" data-view="Graph" data-title="Convergence" style="background-color:#cc9618"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
              <div data-id="recent_git_commit" data-view="Gitcommit"  data-text="A commit message should be here!"></div>
            </li>
  </ul>
  